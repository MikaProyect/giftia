---
import Layout from "../layouts/Layout.astro";

const res = await fetch("http://localhost:3000/api/user/status");
const resJson = await res.json();
const userSession = resJson.message;

if (userSession !== null) {
  return Astro.redirect("/chat");
}
---

<Layout title="Giftia">
  <div class="welcome-cont">
    <div class="welcome-header">
      <img src="/img/logo_karina.png" alt="logo" class="logo" />
      <h1 class="welcome-title">Bienvenido a GIFTIA!</h1>
    </div>
    <div class="loginBtn-container">
      <a href="/login" class="login-link">Iniciar sesi√≥n</a>
    </div>
  </div>
</Layout>

<style>
  body {
    display: flex;
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
  }

  .welcome-cont {
    background-color: #a4bafd;
    min-width: 17rem;
    width: 50rem;
    height: 30rem;
    margin: 3rem;
    display: flex;
    justify-content: space-between; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    flex-direction: column;
    padding: 4rem 0;

    border-radius: 3rem;
    border: 4px solid #ffb2d5;

    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
  }

  .welcome-header {
    display: flex;
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    flex-direction: column;
  }

  .welcome-title {
    font-weight: 400;
    font-size: 3rem;
  }

  .logo {
    width: 35%;
  }

  .login-link {
    display: flex; /* Utiliza flexbox */
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    color: black;
    text-decoration: none;
    background-color: #ffb2d5;
    font-size: 1.5rem;
    border-radius: 0.6rem;

    width: 12rem;
    height: 3.5rem;

    cursor: pointer;
    transition: 0.1s;
  }

  .login-link:active {
    transform: scale(0.9);
    background-color: #be869f;
    transition: 0.1s;
  }

  @media screen and (max-width: 600px) {
    .welcome-cont {
      border-radius: 2.5rem;
    }

    .welcome-title {
      font-size: 2.5rem;
      text-align: center;
    }

    .login-link {
      box-shadow: 0 4px 50px rgba(255, 178, 213, 0.5);
    }
  }
</style>